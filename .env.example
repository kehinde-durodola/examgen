# ExamGen Docker Environment Configuration
# Copy this file to .env and update values for your environment

# PostgreSQL Configuration
POSTGRES_USER=examgen
POSTGRES_PASSWORD=examgen_dev_password
POSTGRES_DB=examgen_db
POSTGRES_PORT=5432

# Server Configuration
DATABASE_URL=postgresql://examgen:examgen_dev_password@postgres:5432/examgen_db?schema=public
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
PORT=3000
NODE_ENV=development
ALLOWED_ORIGINS=http://localhost:5173

# OpenAI Configuration (REQUIRED - Get your key from https://platform.openai.com/api-keys)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Token and Cron Configuration
DAILY_TOKEN_LIMIT=3
TOKEN_REFRESH_CRON=0 0 * * *
GENERATION_CLEANUP_CRON=0 * * * *
CRON_SECRET=generate-a-secure-random-string-here

# Client Configuration
VITE_API_URL=http://localhost:3000/api
CLIENT_PORT=5173

# Docker Build Configuration (development or production)
BUILD_TARGET=development
